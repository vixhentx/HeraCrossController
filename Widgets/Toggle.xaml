<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HeraCrossController.Widgets.Toggle"
             x:Name="this">
    <VerticalStackLayout>
        <Switch IsToggled="{Binding IsToggled,Source={x:Reference this}}" Toggled="Switch_Toggled"/>
        <Label Text="{Binding TextShow,Source={x:Reference this}}"/>
    </VerticalStackLayout>
</ContentView>
